<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.p2plib.PayLib">


    <Button
        android:id="@+id/btnSms"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:paddingLeft="1.3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="#e6eef2"
        android:text="Отправить СМС с сохранением"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnSms2"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingLeft="1.3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#e6eef2"
        android:text="Отправить СМС без сохранения"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSms"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnUssdMTS"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"   android:paddingLeft="1.3dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffb5b5"
        android:text="Оплата USSD на МТС"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSms"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUssdBEE"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffb5"
        android:paddingLeft="1.3dp"
        android:text="Оплата USSD на Билайн"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/btnSms"
        app:layout_constraintTop_toBottomOf="@+id/btnUssdMTS" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="325dp"
        android:layout_height="178dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSms2" />


</android.support.constraint.ConstraintLayout>