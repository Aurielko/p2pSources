<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonTheme">
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">8sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#e6eef2</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>


    </style>

    <style name="TextTheme" >
        <item name="android:background">@drawable/back</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>


    </style>
    <style name="Table" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">6dp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">10</item>
        <item name="android:inputType">textMultiLine</item>

    </style>
    <style name="ButOper">
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">2dp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">8dp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:height">4dp</item>
        <item name="android:layout_width">4dp</item>
    </style>

</resources>
